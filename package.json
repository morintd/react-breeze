{
  "name": "react-breeze",
  "version": "1.0.0",
  "description": "A component library made with TailWind.",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/morintd/react-breeze",
  "homepage": "http://morintd.github.io/react-breeze",
  "license": "MIT",
  "keywords": ["react", "tailwind", "component"],
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "yarn workspace react-breeze build",
    "tsc": "yarn workspace react-breeze tsc",
    "lint": "eslint packages --ext .ts --ext .tsx",
    "test": "yarn workspace react-breeze jest",
    "test:coverage": "yarn workspace react-breeze jest --coverage",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
